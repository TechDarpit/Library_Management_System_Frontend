<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./admin-includes/common-css-includes.ejs') %>

    <!-- Custom styles List (table) this page -->
    <link
      href="/vendor/datatables/dataTables.bootstrap4.min.css"
      rel="stylesheet"
    />
  </head>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <!-- Sidebar -->
      <%- include('./admin-includes/admin-sidebar.ejs') %>

      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->
          <%- include('./admin-includes/admin-topbar.ejs') %>

          <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- Page Heading -->
            <div
              class="d-sm-flex align-items-center justify-content-between mb-4"
            >
              <h1 class="h3 mb-0 text-gray-800">
                <%= user.first_name %> <%= user.last_name %>
              </h1>
              <div class="row">
                <form
                  class="mr-2"
                  method="POST"
                  action="http://localhost:5000/admin/users/<%= user.id %>/change-status"
                >
                  <button type="submit" class="btn btn-outline-primary btn-sm">
                    <i
                      class="fas <%= user.status !== 1 ? 'fa-toggle-on' : 'fa-toggle-off' %>"
                    ></i>
                    <%= user.status !== 1 ? 'Active' : 'Inactive' %>
                  </button>
                </form>
                <a
                  href="/admin/users/<%= user.id %>/edit"
                  class="btn btn-outline-primary btn-sm mr-3"
                >
                  <i class="fas fa-edit"></i> Edit
                </a>
              </div>
            </div>

            <!-- User Details Page -->
            <div class="card shadow mb-4">
              <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">User Details</h6>
              </div>
              <div class="card-body">
                <table class="table table-sm table-borderless">
                  <tbody>
                    <tr>
                      <td>First Name</td>
                      <td><%= user.first_name %></td>
                    </tr>
                    <tr>
                      <td>Last Name</td>
                      <td><%= user.last_name %></td>
                    </tr>
                    <tr>
                      <td>Email</td>
                      <td><%= user.email %></td>
                    </tr>
                    <tr>
                      <td>Mobile No.</td>
                      <td><%= user.mobile_number %></td>
                    </tr>
                    <tr>
                      <td>Status</td>
                      <td><%= user.status === 1 ? 'Active' : 'Inactive' %></td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>

            <div class="card shadow mb-4">
              <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                  <%= user.first_name %>'s Issued Book History
                </h6>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table
                    class="table table-bordered"
                    id="dataTable"
                    width="100%"
                    cellspacing="0"
                  >
                    <thead>
                      <tr>
                        <th>Book Title</th>
                        <th>Issued Date</th>
                        <th>Return Date</th>
                      </tr>
                    </thead>

                    <tbody>
                      <% for (let book of user.books) { %>
                      <tr>
                        <td><%= book.Book.title %></td>
                        <td><%= book.issue_date %></td>
                        <td><%= book.return_date %></td>
                      </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
            <!-- End User Details Page -->
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <%- include('./admin-includes/common-css-includes.ejs') %>
        <!-- End of Footer -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button & Logout Modal-->
    <%- include('./admin-includes/common-css-includes.ejs') %>

    <!-- Import Common JS Files  -->
    <%- include('./admin-includes/common-js-includes.ejs') %>

    <!-- Page level plugins List (Table)  -->
    <script src="/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom List (Table) scripts -->
    <script src="/js/demo/datatables-demo.js"></script>
  </body>
</html>
