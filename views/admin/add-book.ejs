<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./admin-includes/common-css-includes.ejs') %>

    <!-- Custom styles List (table) this page -->
    <link
      href="/vendor/datatables/dataTables.bootstrap4.min.css"
      rel="stylesheet"
    />
  </head>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <!-- Sidebar -->
      <%- include('./admin-includes/admin-sidebar.ejs') %>

      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->
          <%- include('./admin-includes/admin-topbar.ejs') %>

          <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- Page Heading -->
            <div
              class="d-sm-flex align-items-center justify-content-between mb-4"
            >
              <h1 class="h3 mb-0 text-gray-800">Add Book</h1>
            </div>

            <!-- Page Content  -->

            <div class="card shadow mb-4">
              <div class="card-body">
                <form
                  name="newProductForm"
                  class="needs-validation"
                  method="POST"
                  action="http://localhost:5000/admin/books/add"
                  enctype="multipart/form-data"
                  novalidate
                >
                  <div class="row">
                    <div class="col-12">
                      <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input
                          name="title"
                          class="form-control"
                          type="text"
                          placeholder="Enter Book Title"
                          required
                        />
                        <div class="invalid-feedback">
                          Please Enter Valid Book Title.
                        </div>
                      </div>

                      <div class="mb-3">
                        <label for="author_name" class="form-label"
                          >Author Name</label
                        >
                        <input
                          name="author_name"
                          class="form-control"
                          type="text"
                          placeholder="Enter Author Name"
                          required
                        />
                        <div class="invalid-feedback">
                          Please Enter Valid Author Name.
                        </div>
                      </div>

                      <div class="mb-3">
                        <label for="BookDescription" class="form-label"
                          >Description</label
                        >
                        <textarea
                          name="description"
                          id="BookDescription"
                          class="form-control"
                          rows="4"
                          placeholder="Enter Book Description"
                          required
                        ></textarea>
                        <div class="invalid-feedback">
                          Please Enter Valid Book Description.
                        </div>
                      </div>

                      <div class="mb-3">
                        <label for="quantity" class="form-label"
                          >Quantity</label
                        >
                        <input
                          name="quantity"
                          class="form-control"
                          type="number"
                          min="1"
                          placeholder="Enter Book Quantity"
                          required
                        />
                        <div class="invalid-feedback">
                          Please Enter Valid Book Quantity.
                        </div>
                      </div>

                      <div class="mb-3">
                        <label for="book_image" class="form-label"
                          >Cover Image</label
                        >
                        <input
                          class="form-control"
                          type="file"
                          id="book_image"
                          name="book_image"
                          accept="image/*"
                          required
                        />
                        <div class="invalid-feedback">
                          Please Uplode Book Image.
                        </div>
                      </div>

                      <div class="FormBtnMarginTop">
                        <button href="/" class="btn btn-success" type="submit">
                          Add Book
                        </button>
                        <a href="/admin/books" class="btn btn-danger"
                          >Discard</a
                        >
                      </div>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <%- include('./admin-includes/common-css-includes.ejs') %>
        <!-- End of Footer -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button & Logout Modal-->
    <%- include('./admin-includes/common-css-includes.ejs') %>

    <!-- Import Common JS Files  -->
    <%- include('./admin-includes/common-js-includes.ejs') %>

    <!-- Page level Custom Form scripts -->
    <script>
      // Example starter JavaScript for disabling form submissions if there are invalid fields
      (function () {
        'use strict';

        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.querySelectorAll('.needs-validation');

        // Loop over them and prevent submission
        Array.prototype.slice.call(forms).forEach(function (form) {
          form.addEventListener(
            'submit',
            function (event) {
              if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
              }

              form.classList.add('was-validated');
            },
            false
          );
        });
      })();
    </script>

    <!-- Page level custom Add Book page scripts -->
    <script>
      $(document).on('click', '.browse', function () {
        var file = $(this).parents().find('.file');
        file.trigger('click');
      });
      $('input[type="file"]').change(function (e) {
        var fileName = e.target.files[0].name;
        $('#file3').val(fileName);

        var reader = new FileReader();
        reader.onload = function (e) {
          // get loaded data and render thumbnail.
          document.getElementById('preview').src = e.target.result;
        };
        // read the image file as a data URL.
        reader.readAsDataURL(this.files[0]);
      });
    </script>
  </body>
</html>
